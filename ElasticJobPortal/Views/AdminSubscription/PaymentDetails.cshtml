@model IEnumerable<ElasticJobPortal.Models.PaymentDetail>

@{
    ViewData["Title"] = "My Payments";
}

<div class="container mt-1">
    <h2 class="text-2xl font-bold mb-4">My Payments</h2>

    @if (!Model.Any())
    {
        <p>No payments found.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Payment ID</th>
                    <th>Order ID</th>
                    <th>Plan name</th>
                    <th>Amount (₹)</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>@payment.Id</td>
                        <td>@payment.RazorpayPaymentId</td>
                        <td>@payment.RazorpayOrderId</td>
                        <td>@payment.PlanName</td>
                        <td>@(payment.Amount.ToString("0.00"))</td>
                        <td>@payment.Status</td>
                        <td>@payment.PaymentDate.ToLocalTime().ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
