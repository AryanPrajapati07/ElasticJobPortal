@model ElasticJobPortal.Models.SubscriptionPlan

<h2>Edit Subscription Plan</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Features"></label>
        <input asp-for="Features" class="form-control" />
    </div>


    <button type="submit" class="btn btn-success mt-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
