@{
    ViewData["Title"] = "Admin Dashboard";
    var statusData = ViewBag.StatusBreakdown as List<dynamic> ?? new List<dynamic>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Admin Dashboard for Elastic Job Portal to manage jobs and applications.">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .nav-list {
            list-style: none;
            padding: 0;
            margin-bottom: 2rem;
            display: flex;
            gap: 1.5rem;
            flex-wrap: wrap;
        }

            .nav-list li a {
                color: #007bff;
                font-weight: 600;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .nav-list li a:hover {
                    color: #0056b3;
                    text-decoration: underline;
                }

        .stat-card {
            background: linear-gradient(145deg, #ffffff, #f0f4f8);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
            }

            .stat-card h4 {
                font-size: 1.25rem;
                color: #1a3c34;
                margin-bottom: 1rem;
            }

            .stat-card h2 {
                font-size: 2.5rem;
                font-weight: 700;
                color: #374151;
            }

        .no-data {
            text-align: center;
            padding: 2rem;
            background: #f8d7da;
            border-radius: 8px;
            color: #721c24;
            font-size: 1.1rem;
        }

        (max-width: 576px) {
            .dashboard-container

        {
            padding: 1.5rem;
        }

        .stat-card h2 {
            font-size: 2rem;
        }

        .nav-list {
            flex-direction: column;
            gap: 1rem;
        }

        }
    </style>
</head>
<body>
    <div class="container dashboard-container">
        <h2 class="text-center mb-5 text-3xl font-extrabold text-gray-800 animate__animated animate__fadeIn">Admin Dashboard</h2>

        <ul class="nav-list animate__animated animate__fadeIn">
            <li><a asp-action="AllResults" asp-controller="AdminQuiz">Quiz Results</a></li>
            <li><a asp-action="PlanList" asp-controller="AdminSubscription">ManagePlans</a></li>
        </ul>

        <div class="row g-4 mb-4">
            <div class="col-12 col-md-6">
                <div class="stat-card animate__animated animate__fadeInUp">
                    <h4>Total Jobs</h4>
                    <h2>@ViewBag.TotalJobs</h2>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="stat-card animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                    <h4>Total Applications</h4>
                    <h2>@ViewBag.TotalApplications</h2>
                </div>
            </div>
        </div>

        @if (!statusData.Any())
        {
            <div class="no-data animate__animated animate__fadeIn">
                <p>No application status data available at the moment.</p>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>