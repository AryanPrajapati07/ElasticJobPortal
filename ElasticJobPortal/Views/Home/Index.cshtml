@{
    ViewData["Title"] = "Home Page";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ElasticJobPortal - Find Your Dream Job</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-sans bg-gray-100">
   

    <!-- Hero Section -->
    <section id="home" class="bg-blue-50 py-20">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-4xl font-bold mb-4">Discover Your Next Career Opportunity</h2>
            <p class="text-lg mb-6">ElasticJobPortal connects you with top employers and exciting job opportunities tailored to your skills.</p>
            <a href="/signup" class="bg-blue-600 text-white px-6 py-3 rounded-lg text-lg hover:bg-blue-700">Get Started</a>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Why Choose ElasticJobPortal?</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-2">Wide Range of Jobs</h3>
                    <p>Explore thousands of job listings across various industries, from tech to healthcare.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-2">Smart Job Matching</h3>
                    <p>Our advanced algorithm matches you with jobs that fit your skills and preferences.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-2">Easy Application Process</h3>
                    <p>Apply to jobs with a single click and track your application status in real-time.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer id="contact" class="bg-blue-600 text-white py-8">
        <div class="container mx-auto px-4 text-center">
            <p class="mb-4">Contact us at: <a href="mailto:support@elasticjobportal.com" class="underline">support@elasticjobportal.com</a></p>
            <p>&copy; 2025 ElasticJobPortal. All rights reserved.</p>
        </div>
    </footer>
</body>
