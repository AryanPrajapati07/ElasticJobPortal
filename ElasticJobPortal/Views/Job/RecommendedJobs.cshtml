@model List<Job>

<h2>Recommended Jobs for You</h2>

@if (!Model.Any())
{
    <p>No recommended jobs found based on your resume.</p>
}
else
{
    <ul>
        @foreach (var job in Model)
        {
            <li>
                <h4>@job.Title</h4>
                <p>@job.Description</p>
                <p><strong>Tags:</strong> @job.Tags</p>
                <a href="@Url.Action("Details", "Job", new { id = job.Id })" class="btn btn-primary">View Job</a>
            </li>
        }
    </ul>
}



